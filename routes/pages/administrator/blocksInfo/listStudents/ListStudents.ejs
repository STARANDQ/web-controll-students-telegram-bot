  <link rel="stylesheet" type="text/css" href="/administrator/listCurators/css/main.css">
  <!--===============================================================================================-->
</head>
<body>

<style>
  .row.header{
    text-align: left;
  }

  .row .cell:nth-child(1){
    width: 200px;
  }
  .row .cell:nth-child(2){
    width: 200px;
  }
  .row .cell:nth-child(3){
    width: 300px;
  }
  .row .cell:nth-child(4){

  }
</style>

<div class="wrap-table100">
  <div class="table">

    <div class="row header">
      <div class="cell">
        ПІБ
      </div>
      <div class="cell">
        Код
      </div>
      <div class="cell">
        Telegram ID
      </div>
      <div class="cell">
        Куратор
      </div>
    </div>


    <% arrStudents.forEach(student => { %>
      <div class="row" onclick="getProfileStudent('<%= student.id %>')">
        <div class="cell" data-title="Full Name">
          <%= student.name %>
        </div>
        <div class="cell" data-title="Code">
          <%= student.code %>
        </div>
        <div class="cell" data-title="Telegram ID">
          <%= student.TelegramID %>
        </div>
        <div class="cell" data-title="Curator">
          <%= student.curator %>
        </div>
      </div>
    <% })%>

  </div>
</div>



