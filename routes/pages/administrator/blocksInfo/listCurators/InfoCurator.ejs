<style>
  .curatorInfo{
    padding: 20px;
    background: #ededed;
    box-shadow: black 0 0 16px;
  }
  .curatorInfo h1{
    text-align: center;
    font-size: 25px;
  }

  .input-group-text{
    width: 180px;
    border-radius: 0;
  }
</style>

<body>

    <div class="wrap-table100 curatorInfo">
      <h1>Дані про куратора</h1>
      <br>
      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">ID</span>
        <input data-type="id" style="background: #cfcfcf;" value="<%=curator._id%>" disabled type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">ПІБ</span>
        <input data-type="name" value="<%=curator.name%>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
        <input data-type="email" value="<%=curator.email%>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Мобільний телефон</span>
        <input data-type="phoneNumber" value="<%=curator.phoneNumber%>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Навчальний заклад</span>
        <input data-type="educational_Institution" value="<%=curator.educational_Institution%>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Пароль</span>
        <input data-type="password" value="<%=curator.password%>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>

      <br>
      <button onclick="InfoCurator_remove('<%=curator._id%>')" type="button" class="btn btn-danger">Видалити</button>
      <button onclick="InfoCurator_edit()" style="float: right" type="button" class="btn btn-primary">Зберегти</button>
    </div>


